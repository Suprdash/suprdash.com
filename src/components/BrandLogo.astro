---
import { Image } from 'astro:assets';
import brandLogo from '../assets/pics/logo.svg';

interface Props {
  class?: string;
  [x: string]: any;
}

const { class: className, ...rest } = Astro.props;
---

<Image 
  src={brandLogo} 
  alt="ScrewFast Logo"
  class={`brand-logo ${className || ''}`}
  {...rest}
/>

<style>
  .brand-logo {
    /* Add any specific styles for your logo here */
    width: 2vw; /* Adjust as needed */
    height: auto;
  }
</style>