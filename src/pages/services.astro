---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import insync from "../assets/pics/insync.png"
import { SITE } from "@data/constants";
import '../assets/styles/fonts.css'


const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Expert Consultation Services | ScrewFast",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://screwfast.uk",
        "name": "ScrewFast",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>

<div class=" min-h-screen text-white p-4 sm:p-8">
    <div class="max-w-[90rem] mx-auto py-10">
      <div class="flex items-center justify-between mb-20 ">
      <header class="mb-6">
        <h1 class="text-4xl sm:text-lg mona tracking-tight ">additional</h1>
        <h1 class="text-5xl sm:text-6xl mona tracking-tight ">services</h1>
      </header>
      
      <p class="text-md text-right mb-12 mona">
        In addition to website creation, we offer a<br class="hidden sm:inline" />
        comprehensive range of services for the visual<br class="hidden sm:inline" />
        packaging of products and services.
      </p>
      </div>
      
      <div class="space-y-8 mb-40">
        <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-4 sm:space-y-0 sm:space-x-8 pb-12 pt-12 border-t-2 border-b border-white">
          <div class="w-full sm:w-1/3">
            <img
            src={insync.src}
              alt="Presentations design"
              width="200"
              height="200"
              class="rounded-lg w-full h-auto object-cover" 
            />
          </div>
          <div class="w-full sm:w-2/3">
            <h2 class="text-6xl sm:text-[3vw] mb-2 flex items-center font_helvetica_roman font-medium-">
              Custom Website Development  
            </h2>
            <p class="text-sm text-gray-300">
              to showcase your services, products, webinars, and performances
            </p>
          </div>
          <div class="text-2xl hidden sm:block mona">01</div>
        </div>
        
        <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-4 sm:space-y-0 sm:space-x-8 border-b-2 border-white pb-12">
          <div class="w-full sm:w-1/3">
            <img
            src={insync.src}
              alt="Presentations design"
              width="200"
              height="200"
              class="rounded-lg w-full h-auto object-cover" 
            />
          </div>
          <div class="w-full sm:w-2/3">
            <h2 class="text-3xl sm:text-[3vw] font-thin mb-2 flex service-item items-center">
              Custom Web Development
              <span class="inline-block ml-2 transform rotate-45"></span>
            </h2>
            <p class="text-sm text-gray-300">
              development of logos, brand books, business cards, flyers, social media networks.
            </p>
          </div>
          <div class="text-2xl hidden sm:block mona">02</div>
        </div>

        <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-4 sm:space-y-0 sm:space-x-8 pb-12 border-b-2 border-white">
          <div class="w-full sm:w-1/3">
            <img
            src={insync.src}
              alt="Presentations design"
              width="200"
              height="200"
              class="rounded-lg w-full h-auto object-cover" 
            />
          </div>
          <div class="w-full sm:w-2/3">
            <h2 class="text-3xl sm:text-[3vw] font-thin mb-2 flex service-item items-center">
              Website Builder Sites
              <span class="inline-block ml-2 transform rotate-45"></span>
            </h2>
            <p class="text-sm text-gray-300">
              development of logos, brand books, business cards, flyers, social media networks.
            </p>
          </div>
          <div class="text-2xl hidden sm:block mona">03</div>
        </div>
      </div>
    </div>
  </div>


</MainLayout>

<style>
@font-face {
  font-family: "db";
  src:
    local("HelveticaNeueCyr-Light"),
    url("/fonts/HelveticaNeueCyr-Light.ttf") format("truetype");
  font-style: normal;
}

@font-face {
  font-family: db-2;
  src:
    local("HelveticaNeueCyr-Roman"),
    url("/fonts/HelveticaNeueCyr-Roman.ttf") format("truetype");
    font-style: normal;
}

.font_helvetica {
  font-family: "db";
  line-height: 110%;

}

.font_helvetica_roman{
  font-family: db-2;
}
</style>